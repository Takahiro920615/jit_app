<h1>投稿作成ページ</h1>

<div class = "container">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @article, url:user_articles_path, method: :post,  local: true, multipart: true) do |f|%>
      <%= f.label :title %><br>
      <%= f.text_field :title, class:"form-control"%><br>

      <%= f.label :content %><br>
      <%= f.text_field :content, class:"form-control" %><br>

      <%= f.label :image %><br>
      <%= f.file_field :image, class:"form-control"%><br>

      <%= f.submit "作成", class: "btn btn-success"%>
    <% end %>
  </div>
</div>
</div>