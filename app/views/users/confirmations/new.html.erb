<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: new_user_confirmation_path, url: new_user_confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%# <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %> %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: resource.email %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.confirmations.resend_confirmation_instructions'), class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
